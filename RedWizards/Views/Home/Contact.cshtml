@model RedWizards.Models.Person
@{
    ViewData["Titel"] = "Contact";
}
<div class="containers">
    <div class="left-container">
        <img class="phone" src=~/img/random/phone.png alt=phone/>
    </div>
    <div class="right-container">
        <h2 class=titel>Contact</h2>
        <div>
            <div>
                <p class=midtekst>Theaterschool:</p>
                <p class=midtekst>Pieter de Hoochweg 222<br />3024 BJ Rotterdam<br />T +31 6 12233445<br />
            </div>
            <div>
                <p class=midtekst>Theater:</p>
                <p class=midtekst>Benthemplein 13<br />3032 CC Rotterdam<br />T +31 6 12233445<br />E info@redwizards.nl</p>
            </div>
        </div>
        <a class="button" href="#message">Stuur een bericht</a>
    </div>
</div>
<svg class="loopyloop" width="1440" height="166" viewBox="0 0 1440 166" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M719.5 80L720.5 88L721.5 93L723.5 98L726 102.5L730 106L734 108L738.5 110L744 112L752 114L758.5 115.5L767.5 117.5L778.5 118.5H792.5L803 116.5L812.5 114L823 111L829.5 108.5L845.5 102.5L873 94L903 86.5L934.5 81.5L967 78.5L995.5 77.5L1028.5 78.5L1063.5 81.5L1089.5 86L1115.5 91L1164.5 99L1212.5 105L1246 103.5L1270.5 99L1300 89.5L1335.5 70L1375.5 31L1385.5 21L1400 12L1415.5 5L1430.5 0.5H1440V166H-3V105L719.5 80Z" fill="#E62B3C"/>
</svg>

@if (Model != null)
{
    <div class="voorgronddoos">
        <p>Dankjewel, @Model.Name voor je bericht!</p>
    </div>
}

<h1 class="bigtitle" id="message">Stuur een bericht naar ons!</h1>
<div class="contact">
    <form method="post" class="form-style">
        <ul>
            <li>
                <input type="text" name="name" class="field-style field-split align-left" placeholder="Naam" />
                @Html.ValidationMessageFor(m => m.Name)
                <input type="email" name="email" class="field-style field-split align-right" placeholder="Email" />
                @Html.ValidationMessageFor(m => m.Email)

            </li>
            <li>
                <input type="text" name="phone" class="field-style field-split align-left" placeholder="Telefoon" />
                <input type="text" name="zipcode" class="field-style field-split align-right" placeholder="Postcode en Plaats" />
            </li>
            <li>
                <input type="text" name="subject" class="field-style field-full align-none" placeholder="Onderwerp" />
                @Html.ValidationMessageFor(m => m.Subject)
            </li>
            <li>
                <textarea name="message" class="field-style" placeholder="Bericht"></textarea>
                @Html.ValidationMessageFor(m => m.Message)
            </li>
            <li>
                <input type="submit" value="Verstuur" />
            </li>
        </ul>
    </form>
</div>